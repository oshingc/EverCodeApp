<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/borde1"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/profile_photo"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/user" />

        <Button
            android:id="@+id/btn_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/profile_photo"
            android:layout_alignLeft="@+id/descripcion_profile"
            android:layout_alignParentRight="true"
            android:text="Editar Perfil"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/nombre_completo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/profile_photo"
            android:ems="10"
            android:text="nombre, pais"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/descripcion_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/profile_photo"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="puesto y puntaje"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/pais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/nombre_completo"
            android:ems="10"
            android:inputType="textPersonName" >

            <requestFocus />
        </TextView>

    </RelativeLayout>

    <TextView
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/borde1"
        android:ems="10"
        android:text="Medallas"
        android:textSize="16dp" />

</RelativeLayout>